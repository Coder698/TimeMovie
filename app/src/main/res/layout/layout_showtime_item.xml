<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/showtime_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showtime_item_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="@dimen/material_typography_subheading"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:text="12:20"
            android:maxLines="1" />


        <TextView
            android:id="@+id/showtime_item_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:layout_margin="3dp"
            android:text="14:48散场"
            android:textSize="@dimen/material_typography_caption" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showtime_item_info"
        android:layout_toRightOf="@id/showtime_item_time"
        android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_left_right_margins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showtime_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="国语2D"
            android:textSize="@dimen/material_typography_caption"
            android:textColor="@color/primary_text"
            android:maxLines="1" />


        <TextView
            android:id="@+id/showtime_item_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="4号全景声厅"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/material_typography_caption" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showtime_item_payinfo"
        android:layout_toLeftOf="@id/booking_button"
        android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_left_right_margins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showtime_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="34元"
            android:layout_gravity="end"
            android:textSize="@dimen/material_typography_subheading"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:maxLines="1" />


        <TextView
            android:id="@+id/showtime_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/score"
            android:text="折扣卡首单27元"
            android:layout_margin="3dp"
            android:textSize="@dimen/material_typography_caption" />

    </LinearLayout>

    <Button
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/booking_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
        android:textColor="@color/icons"
        android:backgroundTint="@color/primary"
        android:text="购票"
        android:elevation="@dimen/cardview_default_elevation" />

</RelativeLayout>